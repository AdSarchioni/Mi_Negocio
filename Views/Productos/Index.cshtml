
@model IEnumerable<Mi_Negocio.Models.Producto> 

@{
    ViewData["Title"] = "Productos";
}

<h1>Lista de Productos</h1>

<p>
    <a class="btn btn-primary" asp-action="Crear">Crear Nuevo Producto</a>
</p>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            string rowClass = producto.estado == 0 ? "disabled-row" : "";

            <tr class="@rowClass">
                <td>@producto.nombre</td>
                <td>@producto.descripcion</td>
                <td>@producto.precio</td>
                <td>@producto.stock</td>
                <td>@producto.id_categoria</td>
                <td>
                    @if (!string.IsNullOrEmpty(producto.imagen))
                    {
                        <img src="@Url.Content($"~{producto.imagen}")" alt="Imagen del producto" width="100" class="img-thumbnail" />
                    }
                    else
                    {
                        <span>Sin imagen</span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@producto.id_producto" class="btn btn-warning">Editar</a>
                    
                    @if (producto.estado == 0)
                    {
                        <form asp-action="Alta" asp-route-id="@producto.id_producto" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-success" onclick="return confirm('¿Está seguro de que desea dar de alta este producto?');">
                                Alta
                            </button>
                        </form>
                    }
                    
                    <form asp-action="Eliminar" asp-route-id="@producto.id_producto" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este producto?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


