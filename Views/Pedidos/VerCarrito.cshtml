@model List<DetallePedido>

<h2>Carrito de Compras</h2>
<table>
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model)
        {
            <tr>
                <td>@detalle.Producto.Nombre</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="FinalizarPedido" method="post">
    <select name="direccionId">
        <option value="1">Dirección 1</option>
        <option value="2">Dirección 2</option>
    </select>
    <button type="submit">Finalizar Pedido</button>
</form>
